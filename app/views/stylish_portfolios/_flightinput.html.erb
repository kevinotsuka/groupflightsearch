<section id="about" class="about">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>Where are you flying from?</h2>
	                <%= form_tag("/search", method: "get") do %>
					<%= label_tag(:q, "Deaparture Date:") %>
					<%= date_field(:user, :departure_date) %>
					<%= label_tag(:q, "Arrival Date:") %>
					<%= date_field(:user, :arrival_date) %>
					<%= label_tag(:q, "Departure Airport:") %>
					<%= text_field(:user, :airport) %>
					<%= submit_tag("Search") %>
				<% end %>
            </div>
        </div>
    </div>
</section>

<p id="notice"><%= notice %></p>

<h1>Listing Flightsearches</h1>

<table>
  <thead>
    <tr>
      <th>Departure date</th>
      <th>Arrival date</th>
      <th>Airport</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flightsearches.each do |flightsearch| %>
      <tr>
        <td><%= flightsearch.departure_date %></td>
        <td><%= flightsearch.arrival_date %></td>
        <td><%= flightsearch.airport %></td>
        <td><%= link_to 'Show', flightsearch %></td>
        <td><%= link_to 'Edit', edit_flightsearch_path(flightsearch) %></td>
        <td><%= link_to 'Destroy', flightsearch, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

